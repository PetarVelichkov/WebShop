{% extends 'base.html.twig' %}

{% block main %}

    <h2>Adding a new category</h2>

    <div id="all">

        <div id="content">
            <div class="container">
                <div class="col-md-6">
                    <div class="box">

                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="text-center">
                            <a class="btn btn-warning" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add Category</button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

